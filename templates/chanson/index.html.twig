<body class="bg-gra-01">
    <div class="card-4">
        <p>Index de toutes les chansons</p>
        <div class="table">
            <table >
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>NomChanson</th>
                        <th>NomAlbum</th>
                        <th>Duree</th>
                        <th>Genre</th>
                        <th>Voir</th>
                        <th>Modifier</th>

                    </tr>
                </thead>
                <tbody>
                {% for chanson in chansons %}
                    <tr>
                        <td>{{ chanson.id }}</td>
                        <td>{{ chanson.nomChanson }}</td>
                        <td>{{ chanson.nomAlbum }}</td>
                        <td>{{ chanson.duree ? chanson.duree|date('i:s') : '' }}</td>
                        <td> {{ chanson.genre }}</td>
                        <td><a href="{{ path('chanson_show', {'id': chanson.id}) }}">Voir </a></td>
                        <td> <a href="{{ path('chanson_edit', {'id': chanson.id}) }}">Modifier</a></td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
